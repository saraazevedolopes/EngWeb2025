extends layout

block content
    .w3-card-4
        header.w3-container.w3-pink
            h2 Student Form
        form.w3-container(method="post", action=`/alunos/editar/${aluno.id}`)
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" readonly value=aluno.id)
                label Name
                input.w3-input.w3-round(type="text" name="nome" value=aluno.nome)
                label Git
                input.w3-input.w3-round(type="text" name="git" value=aluno.git)
            fieldset
                legend TPC
                each num in [1, 2, 3, 4, 5, 6, 7, 8]
                    if aluno['tpc' + num] === true
                        input.w3-check(type="checkbox" name="tpc" + num value=1 checked)
                        label TPC#{num} 
                    else
                        input.w3-check(type="checkbox" name="tpc" + num value=1)
                        label TPC#{num} 
            fieldset
                legend Avaliação
                label Nota Prática
                input.w3-input.w3-round(type="number", name="pratica", step="0.1", min="0", max="20", value=aluno.pratica)
                label Nota Teste
                input.w3-input.w3-round(type="number", name="teste", step="0.1", min="0", max="20", value=aluno.teste)
            br
            button.w3-btn.w3-pink.w3-mb-2(type="submit") Edit