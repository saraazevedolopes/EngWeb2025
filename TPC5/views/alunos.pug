extends layout

block content
  .w3-card-4
    header.w3-container.w3-pink
      h1
        span Lista de alunos 
        a.w3-btn.w3-round.w3-white(href="/alunos/adicionar") +
    .w3-container
      table.w3-table-all
        tr
          th Nome
          th Git
          th Ações
        each aluno in slist
          tr
            td
              a(href='/alunos/'+ aluno.id)= aluno.nome
            td= aluno.git
            td
              span [
                a(href='/alunos/editar/' + aluno.id) Editar
              span ]
              span [
                a(href='/alunos/apagar/' + aluno.id) Apagar
              span ]