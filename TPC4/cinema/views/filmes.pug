extends layout

block content
  .w3-card-4 
    header.w3-container.w3-red 
      h1= tit
    .w3-container 
      table.w3-table-all 
        tr 
          th Ano 
          th Título 
          th Elenco 
          th Géneros 
          th Ações
        each f in lfilmes 
          tr 
            td= f.year
            td= f.title 
            td 
              ul.w3-ul
                if f.cast
                  each ator in f.cast
                    li 
                      a(href="/filmes/ator/" + encodeURIComponent(ator), style="color:blue;text-decoration:underline;cursor:pointer;")= ator
                else
                  li Nenhum ator disponível
            td  
              ul.w3-ul
                if f.genres
                  each g in f.genres
                    li= g
                else
                  li Nenhum género disponível
            td 
              form(action="/filmes/edit/" + f.id, method="GET", style="display:inline;")
                button(type="submit", style="background:none;border:none;color:green;text-decoration:underline;cursor:pointer;") Editar
              form(action="/filmes/delete/" + f.id, method="POST", style="display:inline;")
                button(type="submit", style="background:none;border:none;color:red;text-decoration:underline;cursor:pointer;") Apagar

    footer.w3-container.w3-red 
      address(style="display:inline;") Generated by EW2025 class
      a(href="javascript:history.back()", style="color:white;text-decoration:underline; margin-left:10px;") Voltar
