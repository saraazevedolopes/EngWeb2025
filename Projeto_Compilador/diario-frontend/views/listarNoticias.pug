extends layout

block content
  .w3-card-4
    .header.w3-container.w3-teal
      a.w3-button.w3-circle.w3-xlarge.w3-light-gray.w3-margin-top(title="Voltar", href="/")
        i.fa.fa-arrow-left.w3-text-teal
      h2 Noticias

  h2.w3-margin-top.w3-margin-left Noticias Publicas

  if noticias && noticias.length
    .w3-container.w3-margin
      each noticia, i in noticias
        .w3-card
          .w3-container
            h3
              b #{noticia.titulo}
            p #{noticia.corpo}
            .w3-right
              b Criado em: #{noticia.data.substring(0, 10)}
            .w3-clear
  else
    .w3-container.w3-padding
      p Nenhum item dispon√≠vel
