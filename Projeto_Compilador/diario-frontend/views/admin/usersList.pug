extends ../layout 

block content 
  .w3-card-4
    .header.w3-container.w3-teal
      a.w3-button.w3-circle.w3-xlarge.w3-light-gray.w3-margin-top(title="Voltar", href="/admin")
        i.fa.fa-arrow-left.w3-text-teal
    
      h1 Lista de Utilizadores

    .w3-container.w3-white
        h6
                    
        .w3-container

            table.w3-table-all 
                tr
                    th ID 
                    th Nome 
                    th Email 
                    th Perfil 
                    th Ações

                each user in utilizadores 
                    tr 
                        td
                            a(href="/utilizadores/" + user._id)=user._id
                        td= user.nome
                        td= user.email 
                        td
                          if user.perfil === 'administrador'
                            span.w3-tag.w3-red.w3-round Administrador
                          else if user.perfil === 'produtor'
                            span.w3-tag.w3-indigo.w3-round Produtor
                          else
                            span.w3-tag.w3-teal.w3-round Consumidor

                        td 
                              a(href="/utilizadores/edit/" + user._id, class="w3-button w3-blue w3-round", style="width:100px; margin-right:8px ") Editar
                              a(href="/utilizadores/delete/" + user._id, class="w3-button w3-red w3-round", style="width:100px") Eliminar