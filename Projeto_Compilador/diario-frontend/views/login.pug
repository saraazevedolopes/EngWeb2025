      p
        label(for="password") Palavra-passe
        input.w3-input.w3-border(type="password", name="password", required)

      p
        button.w3-button.w3-teal(type="submit") Entrar

      p
        | NÃ£o tens conta? 
        a(href="/auth/signup") Regista-te

    hr

    .w3-container(style="margin-top: 15px")
